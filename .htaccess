rewriteEngine on
rewriteCond %{SCRIPT_FILENAME} !-f
rewriteCond %{SCRIPT_FILENAME} !-d

#rewriteRule ^(.*)$ start.php
##RewriteRule ^(.*)$ /start.php?/$1 [L]

# Página de login
rewriteRule ^login$ ./start.php?function=login [NC]
# Validação das credenciais
rewriteRule ^dologin$ ./Core/Controllers/Login/do_login.php [NC]
# Página principal
rewriteRule ^dashboard ./start.php?function=dashboard [NC]
#Cadastro de rotas
rewriteRule ^rotas-de-acesso ./start.php?url=criar-rota [NC]

rewriteRule meu-nome/([a-zA-Z]+)/(\d+) ./start.php?function=meu_nome&nome=$1&id=$2 [NC]

#rewriteRule produto/(\d+)/editar$ ./start.php?function=editar_produto&id=$1 [NC]
#rewriteRule dologin/([a-zA-Z0-9]+)/([a-zA-Z0-9]+) ./start.php?function=do_login&usuario=$1&senha=$2 [NC]